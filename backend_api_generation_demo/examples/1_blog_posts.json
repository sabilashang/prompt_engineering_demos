{
    "resource": "Blog Posts",
    "description": "Complete blog post management system with categories and tags",
    "routes": [
        {
            "method": "GET",
            "path": "/posts",
            "description": "List all blog posts with pagination and filtering"
        },
        {
            "method": "POST",
            "path": "/posts",
            "description": "Create a new blog post (authenticated users only)"
        },
        {
            "method": "GET",
            "path": "/posts/:slug",
            "description": "Get a single blog post by slug"
        },
        {
            "method": "PUT",
            "path": "/posts/:id",
            "description": "Update an existing blog post (author or admin only)"
        },
        {
            "method": "DELETE",
            "path": "/posts/:id",
            "description": "Delete a blog post (author or admin only)"
        },
        {
            "method": "POST",
            "path": "/posts/:id/publish",
            "description": "Publish a draft post"
        },
        {
            "method": "GET",
            "path": "/posts/:id/comments",
            "description": "Get all comments for a post"
        }
    ],
    "requirements": [
        "JWT authentication for protected routes",
        "Role-based access control (admin, author, reader)",
        "Markdown content support",
        "Automatic slug generation from title",
        "Featured image upload",
        "Draft and published status",
        "SEO meta tags (title, description, keywords)"
    ],
    "features": [
        "Pagination (limit, offset)",
        "Search by title or content",
        "Filter by category, tag, author, date",
        "Sort by date, popularity, title",
        "Reading time calculation",
        "View count tracking",
        "Related posts suggestion"
    ],
    "database": "MongoDB with Mongoose"
}